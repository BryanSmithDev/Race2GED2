<resources>

    <style name="SideMenuTextWithoutIcon" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">21.0sp</item>
        <item name="android:textColor">#ff505050</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SideMenuTextWithIcon" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/drawer_setting_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="ListItemText.Header" parent="@style/ListItemText">
        <item name="android:textColor">#ff999999</item>
    </style>

    <style name="Theme.Race2ged" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_race2ged</item>
        <item name="popupMenuStyle">@style/PopupMenu.Race2ged</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Race2ged</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Race2ged</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Race2ged</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Race2ged</item>
        <item name="actionModeBackground">@drawable/cab_background_top_race2ged</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_race2ged</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Race2ged</item>

        <item name="android:editTextStyle">@style/EditTextrace2ged</item>

        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewrace2ged</item>

        <item name="android:checkboxStyle">@style/CheckBoxrace2ged</item>

        <item name="android:radioButtonStyle">@style/RadioButtonrace2ged</item>

        <item name="android:buttonStyle">@style/Buttonrace2ged</item>

        <item name="android:imageButtonStyle">@style/ImageButtonrace2ged</item>

        <item name="android:spinnerStyle">@style/Spinnerrace2ged</item>

        <item name="android:dropDownSpinnerStyle">@style/Spinnerrace2ged.DropDown</item>

        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemrace2ged</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarrace2ged</item>

        <item name="android:seekBarStyle">@style/SeekBarrace2ged</item>

        <item name="android:buttonStyleToggle">@style/Togglerace2ged</item>

        <item name="android:listViewStyle">@style/ListViewrace2ged</item>

        <item name="android:listViewWhiteStyle">@style/ListViewrace2ged.White</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItemrace2ged</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Race2ged.Widget</item>

    </style>

    <style name="ActionBar.Solid.Race2ged" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_background_textured_race2ged</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_race2ged</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_race2ged</item>
        <item name="progressBarStyle">@style/ProgressBar.Race2ged</item>
    </style>

    <style name="ActionBar.Transparent.Race2ged" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_race2ged</item>
        <item name="progressBarStyle">@style/ProgressBar.Race2ged</item>
    </style>

    <style name="PopupMenu.Race2ged" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_race2ged</item>
    </style>

    <style name="DropDownListView.Race2ged" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_race2ged</item>
    </style>

    <style name="ActionBarTabStyle.Race2ged" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_race2ged</item>
    </style>

    <style name="DropDownNav.Race2ged" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_race2ged</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_race2ged</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_race2ged</item>
    </style>

    <style name="ProgressBar.Race2ged" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_race2ged</item>
    </style>

    <style name="ActionButton.CloseMode.Race2ged" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_race2ged</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Race2ged.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Race2ged</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Race2ged</item>
    </style>

    <style name="EditTextrace2ged" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AutoCompleteTextViewrace2ged" parent="android:Widget.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
        <item name="android:background">@drawable/edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxrace2ged" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="RadioButtonrace2ged" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="Buttonrace2ged" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonrace2ged" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <style name="Spinnerrace2ged" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="Spinnerrace2ged.DropDown">
        <item name="spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerDropDownItemrace2ged" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="ProgressBarrace2ged" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">
            @drawable/progress_indeterminate_horizontal_holo_light
        </item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="SeekBarrace2ged" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="Togglerace2ged" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListViewrace2ged" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="ListViewrace2ged.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemrace2ged" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>


</resources>