<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_height="48dp"
    android:layout_width="240dp"
    android:clickable="false"
    android:background="@drawable/selectable_navigation_list_item_bg">

    <FrameLayout
        android:layout_width="8dp"
        android:layout_height="fill_parent"
        android:background="@drawable/selectable_navigation_list_item_indicator"
        android:layout_gravity="left"
        android:id="@+id/navListItemColor"
        android:duplicateParentState="true">

    </FrameLayout>

    <ImageView
        android:id="@+id/navListItemIcon"
        android:layout_width="32dp"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:layout_margin="8dp" />

    <CheckedTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/navListItemText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:checked="false"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:text="Test"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

</LinearLayout>