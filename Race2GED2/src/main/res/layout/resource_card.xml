<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/sample_title"
            android:id="@+id/title"
            android:textColor="@android:color/black"
            android:shadowColor="@color/secondary_color"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/resource_card_right_margin"
            android:layout_marginRight="@dimen/resource_card_right_margin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/sample_description"
            android:textColor="#e1727272"
            android:id="@+id/description"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="@dimen/resource_card_right_margin"
            android:layout_marginRight="@dimen/resource_card_right_margin"
            android:layout_alignStart="@id/title"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_details"
        android:layout_marginLeft="@dimen/class_card_side_padding"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>